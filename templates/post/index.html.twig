{% extends 'base.html.twig' %}

{% block title %}Posts list{% endblock %}

{% block body %}
    <h2 class="header-page">Posts list</h2>
    <a href="{{ path('app_post_create') }}" class="btn btn-primary btn-sm mb-3">Create new post</a>
    {% for post in posts %}
        <div class="post mb-3 pb-3">
            <h5>{{ post.title }}</h5>
            <small>[Category: {{ post.categoryPost }}]</small>
            <p class="post-details">
                <span>Data dodania: {{ post.createdAt|date("Y-m-d H:i:s") }} </span>
                <span>Ostatnia aktualizacja: {{ post.updatedAt|date("Y-m-d H:i:s") }} </span>
            </p>
            <div class="post-links">
                <a href="{{ path('app_post_edit', {'slug': post.slug}) }}" class="btn btn-success btn-sm">edit</a>
                <a href="{{ path('app_post_show', {'slug': post.slug}) }}" class="btn btn-primary btn-sm">show</a>
                <a href="{{ path('app_post_delete', {'slug': post.slug}) }}" class="btn btn-danger btn-sm">delete</a>
            </div>
        </div>
    {% else %}
        <div class="alert alert-danger">Brak wynik√≥w</div>
    {% endfor %}
{% endblock %}